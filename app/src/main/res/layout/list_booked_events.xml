<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bok_poster"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/imagepos" />

    <TextView
        android:id="@+id/bok_compname"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:text="TextView"

        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/bok_evename"

        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:text="TextView"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/bok_transid"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"

        android:text="TextView"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/bok_price"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:shadowDy="@android:integer/config_longAnimTime"
        android:text="TextView"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/bok_date"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:shadowDy="@android:integer/config_longAnimTime"
        android:text="TextView"
        android:textSize="15dp" />
</LinearLayout>