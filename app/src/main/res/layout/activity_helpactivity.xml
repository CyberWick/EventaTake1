<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252a37"
    tools:context=".helpactivity">

    <Button
        android:id="@+id/about2"
        android:layout_width="410dp"
        android:layout_height="52dp"
        android:background="#F4D529"
        android:text="                 HELP"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#252a37"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="357dp"
        android:layout_height="67dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="32dp"
        android:text="Dedicated Support When You Need It!!"
        android:textColor="#F4D529"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="357dp"
        android:layout_height="28dp"
        android:layout_marginStart="24dp"
        android:text="For any queries,Contact us on:"
        android:textColor="#F4D529"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="357dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:text="E-mail:adikale123@gmail.com"
        android:textColor="#F4D529"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>